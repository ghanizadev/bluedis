{
  "name": "bluedis",
  "productName": "bluedis",
  "author": {
    "name": "Jean Felipe de Melo",
    "email": "jf.melo6@gmail.com"
  },
  "version": "0.2.0",
  "keywords": [
    "redis",
    "gui",
    "database",
    "bluedis",
    "management",
    "data",
    "visualization"
  ],
  "private": true,
  "main": "dist/main.js",
  "homepage": "./",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon.ico",
        "appBundleId": "com.ghanizadev.bluedis",
        "appVersion": "0.2.0",
        "dir": "./app",
        "name": "Bluedis",
        "out": "bundle",
        "appCategoryType": "public.app-category.developer-tools",
        "darwinDarkModeSupport": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Bluedis",
            "description": "A modern Redis client",
            "icon": "../assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "description": "A modern Redis client"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@electron-forge/core": "^6.0.0-beta.63",
    "@reduxjs/toolkit": "^1.8.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "ioredis": "^5.0.4",
    "nanoid": "^3.3.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.1",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^18.1.0",
    "styled-components": "^5.3.5",
    "typescript": "^4.6.4",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start:dev": "npx gulp start-dev",
    "start:prod": "npx gulp start-prod",
    "build:electron": "tsc --project tsconfig.app.json",
    "build": "npx gulp build",
    "pack": "npx gulp pack",
    "predev:electron": "npm run build:electron",
    "dev:react": "cross-env NODE_ENV=development BROWSER=none react-scripts start",
    "dev:electron": "cross-env NODE_ENV=development electron-forge start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/react-redux": "^7.1.24",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "cross-env": "^7.0.3",
    "electron": "^18.2.3",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0",
    "gulp": "^4.0.2",
    "jest-styled-components": "^7.0.8"
  }
}
