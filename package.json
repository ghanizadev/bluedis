{
  "name": "bluedis",
  "productName": "Bluedis",
  "version": "0.1.0",
  "description": "An elegant Redis GUI interface",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "npx eslint --ext .ts .",
    "dev": "npx gulp dev",
    "dir": "npx gulp pack",
    "dist": "npx gulp dist",
    "build": "npx gulp build",
    "compile": "npx gulp compile",
    "publish": "build --mac --win --linux -p always"
  },
  "keywords": [
    "redis",
    "gui",
    "database",
    "bluedis",
    "management",
    "data",
    "visualization"
  ],
  "author": {
    "name": "Jean Felipe de Melo",
    "email": "jf.melo6@gmail.com"
  },
  "build": {
    "appId": "com.ghanizadev.bluedis",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "assets/**/*",
      "dist/**/*.js",
      "dist/**/*.js.map",
      "dist/database/**/*",
      "dist/build/**/*",
      "dist/listeners/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extends": null,
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "win": {
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "snap",
      "desktop": "Bluedis",
      "category": "Development",
      "icon": "assets/icon.png"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/electron": "^1.6.10",
    "@types/ioredis": "^4.19.3",
    "@types/redis": "^2.8.28",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "electron": "11.1.0",
    "electron-builder": "^22.9.1",
    "electron-builder-squirrel-windows": "^22.10.3",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "gulp": "^4.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "ioredis": "^4.22.0",
    "npm-run-all": "^4.1.5",
    "redis": "^3.0.2",
    "uuid": "^8.3.2"
  }
}
